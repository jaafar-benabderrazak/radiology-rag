# ==============================================
# Production Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL=postgresql://radiology_user:CHANGE_THIS_PASSWORD@postgres:5432/radiology_templates
POSTGRES_USER=radiology_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=radiology_templates

# ==============================================
# Redis Cache
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# Qdrant Vector Database
# ==============================================
QDRANT_URL=http://qdrant:6333

# ==============================================
# AI API Keys
# ==============================================
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# Security & Authentication
# ==============================================
# Generate a strong secret key (min 32 characters)
# You can use: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here_change_me_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# ==============================================
# CORS & Allowed Origins
# ==============================================
# Add your production domain(s) here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# Frontend Configuration
# ==============================================
VITE_API_URL=https://api.yourdomain.com

# ==============================================
# Environment
# ==============================================
ENVIRONMENT=production

# ==============================================
# Email/SMTP Configuration (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
CRITICAL_NOTIFICATIONS_ENABLED=true

# ==============================================
# Backup & Disaster Recovery (Optional)
# ==============================================
BACKUP_ENABLED=true
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
MAX_BACKUPS=50

# ==============================================
# Voice Dictation (Optional)
# ==============================================
VOICE_DICTATION_ENABLED=true
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto
USE_OPENAI_WHISPER_API=false

# ==============================================
# DICOM Integration (Optional)
# ==============================================
DICOM_ENABLED=true
DICOM_UPLOAD_DIR=/app/dicom_storage
DICOM_MAX_FILE_SIZE=104857600
