# ==============================================
# Replit Environment Configuration
# ==============================================

# Database (SQLite for Replit)
DATABASE_URL=sqlite:///./radiology.db

# Gemini API Key (Get from: https://aistudio.google.com/app/apikey)
# Add this to Replit Secrets instead of here!
GEMINI_API_KEY=your_gemini_api_key_here

# Security (auto-generated on first run)
SECRET_KEY=replit_secret_key_change_me_in_production_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS (allow all for demo)
ALLOWED_ORIGINS=*

# Environment
ENVIRONMENT=replit

# Simplified services for Replit (no external dependencies)
REDIS_URL=memory://
QDRANT_URL=memory://

# ==============================================
# Optional Features (can enable later)
# ==============================================

# Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# CRITICAL_NOTIFICATIONS_ENABLED=false

# Voice Dictation
VOICE_DICTATION_ENABLED=true
WHISPER_MODEL=tiny
USE_OPENAI_WHISPER_API=false

# DICOM Integration
DICOM_ENABLED=false

# Backup System
BACKUP_ENABLED=false
