# Replit configuration for Radiology RAG
# This configuration runs both frontend and backend on the same port

run = "bash start-replit.sh"
entrypoint = "backend/main.py"
language = "python3"
modules = ["python-3.11"]

[nix]
channel = "stable-23_11"
packages = ["libxcrypt"]

[deployment]
run = ["bash", "start-replit.sh"]
build = ["bash", "-c", "python3 -m pip install --no-cache-dir -r backend/requirements-deploy.txt && cd frontend && npm ci && npm run build"]
deploymentTarget = "cloudrun"

[env]
PYTHONUNBUFFERED = "1"
ENVIRONMENT = "production"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[languages.python3]
pattern = "**/*.py"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend"

[[workflows.workflow]]
name = "backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && ../.pythonlibs/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"
